[
    {
        "id": "redeploy-webhook",
        "execute-command": "./deploy.sh",
        "trigger-rule": {
            "match": {
                "type": "payload-hmac-sha256",
                "secret": "{{ getenv \"DEPLOY_WEBHOOK_SECRET\" | js }}",
                "parameter": {
                    "source": "header",
                    "name": "X-Signature"
                }
            }
        }
    }
]